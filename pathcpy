#include "shell.h"

/**
 * pathcpy - function that get the path and tokenises it.
 *
 * Return: pathcpy
 */

#define NPATH 10000
char **pathcpy()
{
	char *path = NULL;
	char npath[NPATH];
	char **pathcpy;

	path = getenv("PATH");
	_stcpy(npath, path);
	pathcpy = _tokenise(npath, ":");
	return (pathcpy);
}
